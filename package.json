{
  "name": "react-project",
  "description": "Fast and effective environment for frontend development",
  "author": "Maxim Lyulyaev",
  "version": "1.0.0",
  "scripts": {
    "dev": "npm run watchServer & npm run devServer",
    "prod": "npm run prod:build && npm run start",
    "dockerbuild": "yarn version-increment && yarn prod:build && sudo docker build -t lyulyaevma/react-project:$(cat version.num) . && sudo docker push lyulyaevma/react-project:$(cat version.num)",
    "---------- HELPERS -----------------------------------------------------------------------------": "",
    "remove": "rimraf dist",
    "buildServer": "tsc -project configs/tsconfig.server.json",
    "watchServer": "tsc -watch -project configs/tsconfig.server.json",
    "removeAndBuildServer": "npm run remove && npm run buildServer",
    "start": "cross-env NODE_ENV=production node ./dist/server/index.js",
    "version-increment": "perl -i -pe 's/^((\\d+\\.)*)(\\d+)(.*)$/$1.($3+1).$4/e' < version.num version.num",
    "---------- DEVELOPMENT -------------------------------------------------------------------------": "",
    "predev": "npm run removeAndBuildServer",
    "devWindows": "concurrently --kill-others \"npm run watchServer\" \"npm run devServer\"",
    "devServer": "cross-env BABEL_ENV=client NODE_ENV=development nodemon --config configs/nodemon.json ./dist/server/index.js",
    "---------- STAGING -----------------------------------------------------------------------------": "",
    "prestaging:build": "npm run removeAndBuildServer",
    "staging:build": "cross-env BABEL_ENV=client NODE_ENV=staging webpack",
    "staging": "npm run staging:build && npm run start",
    "---------- PRODUCTION --------------------------------------------------------------------------": "",
    "preprod:build": "npm run removeAndBuildServer",
    "prod:build": "cross-env BABEL_ENV=client NODE_ENV=production webpack -p",
    "---------- TESTING -----------------------------------------------------------------------------": "",
    "test": "npm run lint && npm run unit",
    "lint": "tslint 'src/**/*.ts{,x}' --exclude 'src/typings.d.ts'",
    "unit": "jest",
    "------------------------------------------------------------------------------------------------": ""
  },
